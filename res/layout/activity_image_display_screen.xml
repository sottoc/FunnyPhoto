<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/bg_main" android:layout_width="fill_parent" android:layout_height="fill_parent" android:keepScreenOn="true"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/imageview_showimage" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true" />
    <RelativeLayout android:id="@+id/ctrbuttons" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5.0dip" android:layout_alignParentLeft="true">
            <ImageView android:id="@+id/lowdelete" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/selector_btn_delete" android:onClick="onDelete" />
            <TextView android:textColor="@android:color/white" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Delete" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5.0dip" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/lowshare" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/selector_btn_share" android:onClick="onShare" />
            <TextView android:textColor="@android:color/white" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Share" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>